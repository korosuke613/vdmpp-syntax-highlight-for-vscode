{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "value",
	"patterns": [
		{
			"include": "#value-block"
		}
	],
	"repository": {
		"value-block":{
			"name": "meta.variable.vdmpp",
			"begin": "(values)",
			"end": "\\s*(?=instance variables|operations|functions)",
			"beginCaptures": {
				"1":{
					"name": "entity.name.section.vdmpp"
				}
			},
			"patterns": [
				{
					"include": "#value-declator"
				}
			]
		},
		"value-declator": {
			"patterns": [
				{
					"name": "meta.value.vdmpp",
					"match": "(.*)\\s+(.*)\\s+(?:\\S+)\\s*(:)\\s*(.+)\\s*(=)\\s*(\\S+)\\s*(;)",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "source.vdmpp.statement"
								}
							]
						},
						"2": {
							"patterns": [
								{
									"include": "source.vdmpp.statement"
								}
							]
						},
						"3": {
							"patterns": [
								{
									"include": "source.vdmpp.statement"
								}
							]
						},
						"4": {
							"patterns": [
								{
									"include": "source.vdmpp.type"
								}
							]
						},
						"5": {
							"patterns": [
								{
									"include": "source.vdmpp.statement"
								}
							]
						},
						"6": {
							"patterns": [
								{
									"include": "source.vdmpp.statement"
								}
							]
						},
						"7": {
							"patterns": [
								{
									"include": "source.vdmpp.number"
								}
							]
						}
					}
				}
			]
		}
	},
	"scopeName": "source.vdmpp.definition.value"
}